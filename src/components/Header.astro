---

<header class="sticky top-0 z-50">
  <!-- Top Banner -->
  <div class="bg-primary-700 text-white py-3">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-2xl md:text-3xl font-bold">SARKARI RESULT</h1>
      <p class="text-sm opacity-90">SarkariResult.com</p>
    </div>
  </div>
  
  <!-- Navigation -->
  <nav class="bg-secondary-800 shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between h-14">
        <div class="flex items-center space-x-1 md:space-x-4">
          <a href="/" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/latest-jobs" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Latest Job
          </a>
          <a href="/admit-cards" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Admit Card
          </a>
          <a href="/results" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Result
          </a>
          <a href="/answer-key" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Answer Key
          </a>
          <a href="/syllabus" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Syllabus
          </a>
          <a href="/admission" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Admission
          </a>
          <a href="/documents" class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors">
            Documents
          </a>
          <div class="relative group">
            <button class="text-white hover:bg-secondary-700 px-3 py-2 rounded-md text-sm font-medium transition-colors flex items-center">
              More
              <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-md py-2 hidden group-hover:block">
              <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Admin Panel</a>
              <a href="/search" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Search</a>
              <a href="/about" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">About Us</a>
              <a href="/contact" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Contact</a>
            </div>
          </div>
        </div>
        
        <!-- Search Icon -->
        <button class="text-white p-2 hover:bg-secondary-700 rounded-md">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>