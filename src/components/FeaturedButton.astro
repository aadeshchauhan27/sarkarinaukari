---
export interface Props {
  title: string;
  subtitle: string;
  color: 'red' | 'orange' | 'purple' | 'blue' | 'green' | 'yellow';
  href: string;
}

const { title, subtitle, color, href } = Astro.props;

const colorClasses = {
  red: 'bg-red-500 hover:bg-red-600',
  orange: 'bg-orange-500 hover:bg-orange-600',
  purple: 'bg-purple-500 hover:bg-purple-600',
  blue: 'bg-blue-500 hover:bg-blue-600',
  green: 'bg-green-600 hover:bg-green-700',
  yellow: 'bg-yellow-500 hover:bg-yellow-600'
};
---

<a 
  href={href}
  class={`block ${colorClasses[color]} text-white rounded-lg p-4 text-center transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl`}
>
  <div class="font-bold text-sm md:text-base leading-tight">
    {title}
  </div>
  <div class="text-xs md:text-sm opacity-90 mt-1">
    {subtitle}
  </div>
</a>