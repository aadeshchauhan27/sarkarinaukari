---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import JobCard from '../../components/JobCard.astro';
import { getCollection } from 'astro:content';

const admitCards = (await getCollection('jobs'))
  .filter(job => job.data.category === 'admit-cards')
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Latest Admit Cards",
  "description": "Download latest admit cards for government exams",
  "url": Astro.url.href
};
---

<BaseLayout 
  title="Latest Admit Cards 2025 - Download Hall Tickets"
  description="Download latest admit cards and hall tickets for government exams. Get updates on SSC, IBPS, RRB, UPSC admit cards. Check exam dates and centers."
  structuredData={structuredData}
>
  <Header />
  
  <main class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Latest Admit Cards 2025</h1>
      <p class="text-gray-600 text-lg">Download admit cards and hall tickets for upcoming government examinations. Check exam dates, centers, and important instructions.</p>
    </div>

    <!-- Important Notice -->
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Important Notice</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>Always download admit cards from official websites only. Beware of fake websites and fraudulent activities.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Filter Admit Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Organization</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">All Organizations</option>
            <option value="ssc">SSC</option>
            <option value="ibps">IBPS</option>
            <option value="rrb">Railway (RRB)</option>
            <option value="nta">NTA</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Exam Type</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">All Exams</option>
            <option value="banking">Banking</option>
            <option value="railway">Railway</option>
            <option value="medical">Medical</option>
            <option value="engineering">Engineering</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">All Status</option>
            <option value="available">Available</option>
            <option value="coming-soon">Coming Soon</option>
            <option value="expired">Expired</option>
          </select>
        </div>
        <div class="flex items-end">
          <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
            Apply Filters
          </button>
        </div>
      </div>
    </div>

    <!-- Admit Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {admitCards.map((card) => (
        <JobCard
          title={card.data.title}
          organization={card.data.organization}
          posts={card.data.posts}
          lastDate={card.data.lastDate}
          category={card.data.category}
          featured={card.data.featured}
          slug={card.slug}
        />
      ))}
    </div>

    {admitCards.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No admit cards available at the moment. Check back later for updates!</p>
      </div>
    )}

    <!-- How to Download Section -->
    <div class="mt-12 bg-white rounded-lg shadow-md p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">How to Download Admit Card</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Step-by-Step Process</h3>
          <ol class="list-decimal list-inside space-y-2 text-gray-600">
            <li>Visit the official website of the conducting authority</li>
            <li>Look for "Admit Card" or "Hall Ticket" section</li>
            <li>Click on the relevant exam admit card link</li>
            <li>Enter your registration number and password/DOB</li>
            <li>Submit the details and download your admit card</li>
            <li>Take multiple printouts for exam day</li>
          </ol>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Important Points</h3>
          <ul class="list-disc list-inside space-y-2 text-gray-600">
            <li>Download admit card only from official websites</li>
            <li>Check all details carefully on the admit card</li>
            <li>Carry original photo ID proof along with admit card</li>
            <li>Reach exam center as per reporting time</li>
            <li>Follow all exam day instructions</li>
            <li>Keep admit card safe for future reference</li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>