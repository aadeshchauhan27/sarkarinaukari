---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Admin Panel - SarkariResult Portal">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-white">
    <!-- Header -->
    <header class="bg-white shadow-md border-b sticky top-0 z-10">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <h1 class="text-3xl font-extrabold text-blue-700 tracking-tight flex items-center gap-2">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 6v6l4 2"/></svg>
          Admin Panel
        </h1>
        <a href="/" class="text-blue-600 hover:text-blue-800 font-semibold flex items-center gap-1">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7"/></svg>
          Back to Site
        </a>
      </div>
    </header>

    <div class="container mx-auto px-4 py-10">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <nav class="bg-white rounded-2xl shadow-lg p-6 sticky top-24">
            <ul class="space-y-3">
              <li><button class="w-full text-left px-4 py-2 text-blue-700 bg-blue-100 rounded-lg font-semibold flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 12h18M3 6h18M3 18h18"/></svg>Dashboard</button></li>
              <li><button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 17v-6h6v6m-6 0v-6m6 0v6"/></svg>Latest Jobs</button></li>
              <li><button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"/></svg>Admit Cards</button></li>
              <li><button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"/></svg>Results</button></li>
              <li><button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M8 17l4-4 4 4m0-8l-4 4-4-4"/></svg>Syllabus</button></li>
              <li><button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg flex items-center gap-2"><svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 7h18M3 12h18M3 17h18"/></svg>Categories</button></li>
            </ul>
          </nav>
        </aside>

        <!-- Main Content -->
        <main class="lg:col-span-3">
          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
            <div class="bg-gradient-to-br from-blue-100 to-white rounded-2xl shadow p-6 flex items-center gap-4">
              <div class="p-3 bg-blue-200 rounded-full"><svg class="w-6 h-6 text-blue-700" fill="currentColor" viewBox="0 0 20 20"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg></div>
              <div><p class="text-gray-500 text-xs">Total Jobs</p><p class="text-2xl font-bold text-gray-900">247</p></div>
            </div>
            <div class="bg-gradient-to-br from-green-100 to-white rounded-2xl shadow p-6 flex items-center gap-4">
              <div class="p-3 bg-green-200 rounded-full"><svg class="w-6 h-6 text-green-700" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg></div>
              <div><p class="text-gray-500 text-xs">Admit Cards</p><p class="text-2xl font-bold text-gray-900">89</p></div>
            </div>
            <div class="bg-gradient-to-br from-purple-100 to-white rounded-2xl shadow p-6 flex items-center gap-4">
              <div class="p-3 bg-purple-200 rounded-full"><svg class="w-6 h-6 text-purple-700" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path></svg></div>
              <div><p class="text-gray-500 text-xs">Results</p><p class="text-2xl font-bold text-gray-900">156</p></div>
            </div>
            <div class="bg-gradient-to-br from-yellow-100 to-white rounded-2xl shadow p-6 flex items-center gap-4">
              <div class="p-3 bg-yellow-200 rounded-full"><svg class="w-6 h-6 text-yellow-700" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg></div>
              <div><p class="text-gray-500 text-xs">Total Views</p><p class="text-2xl font-bold text-gray-900">12.5k</p></div>
            </div>
          </div>

          <!-- Content Management Card -->
          <div class="bg-white rounded-2xl shadow-xl p-8 mb-10 border border-blue-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4"/></svg>
              Content Management
            </h2>
            <!-- Add New Post Form -->
            <div id="post-form" class="border rounded-lg p-6 mb-6 bg-gray-50">
              <h3 class="text-lg font-medium text-gray-900 mb-4">Create New Post</h3>
              <form class="space-y-4" id="post-form">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                    <input type="text" id="title" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter post title" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Organization</label>
                    <input type="text" id="organization" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., SSC, RRB" required>
                  </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Total Posts</label>
                    <input type="number" id="posts" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Number of posts" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Last Date</label>
                    <input type="date" id="lastDate" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Published At</label>
                    <input type="date" id="publishedAt" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                  </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <select id="category" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                      <option value="latest-jobs">Latest Jobs</option>
                      <option value="admit-cards">Admit Cards</option>
                      <option value="results">Results</option>
                      <option value="syllabus">Syllabus</option>
                      <option value="answer-key">Answer Key</option>
                      <option value="documents">Documents</option>
                      <option value="admission">Admission</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Qualification</label>
                    <input type="text" id="qualification" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., Graduate" required>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                    <input type="text" id="location" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., Delhi" required>
                  </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Apply Mode</label>
                    <select id="applyMode" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                      <option value="online">Online</option>
                      <option value="offline">Offline</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Salary (optional)</label>
                    <input type="text" id="salary" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., 35000-112400">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tags (comma separated, optional)</label>
                    <input type="text" id="tags" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g., banking, officer">
                  </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">SEO Title (optional)</label>
                    <input type="text" id="seoTitle" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="SEO title">
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">SEO Description (optional)</label>
                    <input type="text" id="seoDescription" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="SEO description">
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Content</label>
                  <div id="quill-editor" style="height: 300px;"></div>
                  <textarea id="quill-content" name="content" style="display:none;"></textarea>
                </div>
                <div class="flex items-center space-x-4">
                  <label class="flex items-center">
                    <input type="checkbox" id="featured" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                    <span class="ml-2 text-sm text-gray-700">Featured Post</span>
                  </label>
                </div>
                <div class="flex space-x-3">
                  <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    Publish Post
                  </button>
                  <button type="button" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400 transition-colors">
                    Save as Draft
                  </button>
                </div>
              </form>
            </div>

            <!-- Recent Posts -->
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Posts</h3>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">SSC MTS Havildar 2025</td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Latest Jobs</td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Jan 15, 2025</td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <button class="text-indigo-600 hover:text-indigo-900 mr-3">Edit</button>
                        <button class="text-red-600 hover:text-red-900">Delete</button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-2">Manage Categories</h3>
              <div id="categories-list" class="flex flex-wrap gap-2 mb-2"></div>
              <form id="add-category-form" class="flex gap-2 mb-2">
                <input id="new-category-input" type="text" class="px-2 py-1 border rounded" placeholder="Add new category" />
                <button type="submit" class="bg-green-600 text-white px-3 py-1 rounded">Add</button>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Load Quill from CDN
  const quillScript = document.createElement('script');
  quillScript.src = 'https://cdn.quilljs.com/1.3.7/quill.js';
  quillScript.onload = function() {
    const quill = new Quill('#quill-editor', {
      theme: 'snow',
      placeholder: 'Write your content here...'
    });
    // On form submit, copy HTML to hidden textarea
    const form = document.getElementById('post-form');
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      document.getElementById('quill-content').value = quill.root.innerHTML;
      // Gather form data
      const title = document.getElementById('title').value.trim();
      const organization = document.getElementById('organization').value.trim();
      const posts = parseInt(document.getElementById('posts').value, 10);
      const lastDateInput = document.getElementById('lastDate').value;
      const lastDate = lastDateInput ? new Date(lastDateInput).toISOString() : new Date().toISOString();
      const publishedAtInput = document.getElementById('publishedAt').value;
      const publishedAt = publishedAtInput ? new Date(publishedAtInput).toISOString() : new Date().toISOString();
      const category = document.getElementById('category').value;
      const qualification = document.getElementById('qualification').value.trim();
      const location = document.getElementById('location').value.trim();
      const applyMode = document.getElementById('applyMode').value;
      const salary = document.getElementById('salary').value.trim();
      const tags = document.getElementById('tags').value.split(',').map(t => t.trim()).filter(Boolean);
      const seoTitle = document.getElementById('seoTitle').value.trim();
      const seoDescription = document.getElementById('seoDescription').value.trim();
      const content = quill.root.innerHTML;
      const featured = document.getElementById('featured').checked;
      // Validate required fields
      if (!title || !organization || isNaN(posts) || !lastDate || !publishedAt || !category || !qualification || !location || !applyMode) {
        alert('Please fill all required fields.');
        return;
      }
      // Generate slug
      const slug = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      // Prepare frontmatter
      const frontmatter = {
        title,
        organization,
        posts,
        lastDate,
        category,
        featured,
        salary: salary || undefined,
        qualification,
        location,
        applyMode,
        publishedAt,
        tags,
        seoTitle: seoTitle || undefined,
        seoDescription: seoDescription || undefined,
      };
      // Send to backend
      const res = await fetch('http://localhost:4000/add-post', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ slug, frontmatter, content })
      });
      if (res.ok) {
        alert('Post published!');
        form.reset();
        quill.setContents([]);
      } else {
        alert('Failed to publish post.');
      }
    });
  };
  document.head.appendChild(quillScript);
  // Load Quill CSS
  const quillCss = document.createElement('link');
  quillCss.rel = 'stylesheet';
  quillCss.href = 'https://cdn.quilljs.com/1.3.7/quill.snow.css';
  document.head.appendChild(quillCss);

  // Category management
  async function loadCategories() {
    const res = await fetch('http://localhost:4000/categories');
    const categories = await res.json();
    const list = document.getElementById('categories-list');
    list.innerHTML = '';
    categories.forEach(cat => {
      const span = document.createElement('span');
      span.className = 'bg-blue-100 text-blue-800 px-2 py-1 rounded flex items-center gap-1';
      span.textContent = cat;
      const btn = document.createElement('button');
      btn.textContent = 'Ã—';
      btn.className = 'ml-1 text-red-600 hover:text-red-800';
      btn.onclick = async () => {
        await fetch('http://localhost:4000/remove-category', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category: cat })
        });
        loadCategories();
      };
      span.appendChild(btn);
      list.appendChild(span);
    });
    // Update category select
    const select = document.querySelector('select');
    if (select) {
      select.innerHTML = categories.map(cat => `<option value="${cat}">${cat.replace(/-/g, ' ')}</option>`).join('');
    }
  }

  // Dynamic form field mapping by category
  const categoryFieldMap = {
    'latest-jobs': ['organization','posts','lastDate','qualification','location','applyMode','publishedAt','salary','tags','seoTitle','seoDescription','featured'],
    'admit-cards': ['organization','lastDate','location','publishedAt','tags','seoTitle','seoDescription','featured'],
    'results': ['organization','publishedAt','tags','seoTitle','seoDescription','featured'],
    'syllabus': ['organization','publishedAt','tags','seoTitle','seoDescription','featured'],
    'answer-key': ['organization','publishedAt','tags','seoTitle','seoDescription','featured'],
    'documents': ['organization','publishedAt','tags','seoTitle','seoDescription','featured'],
    'admission': ['organization','posts','lastDate','qualification','location','applyMode','publishedAt','salary','tags','seoTitle','seoDescription','featured'],
  };

  function updateFormFieldsForCategory(cat) {
    // All possible field IDs
    const allFields = ['organization','posts','lastDate','qualification','location','applyMode','publishedAt','salary','tags','seoTitle','seoDescription','featured'];
    allFields.forEach(id => {
      const el = document.getElementById(id);
      if (!el) return;
      // Find the closest parent div (form group)
      let parent = el.parentElement;
      while (parent && parent.tagName !== 'DIV') parent = parent.parentElement;
      if (categoryFieldMap[cat].includes(id)) {
        parent.style.display = '';
      } else {
        parent.style.display = 'none';
      }
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    loadCategories();
    // Add category form
    const addCatForm = document.getElementById('add-category-form');
    addCatForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const input = document.getElementById('new-category-input');
      const val = input.value.trim();
      if (val) {
        await fetch('http://localhost:4000/add-category', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category: val })
        });
        input.value = '';
        loadCategories();
      }
    });
    // Initial update
    const catSelect = document.getElementById('category');
    updateFormFieldsForCategory(catSelect.value);
    catSelect.addEventListener('change', function(e) {
      updateFormFieldsForCategory(e.target.value);
    });
  });
</script>